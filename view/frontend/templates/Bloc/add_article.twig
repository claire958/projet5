{% if name == "add_article" %}
    <div class="col-lg-6 mb-4">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Ajouter un article</h6>
            </div>
            <div class="card-body">
                <div class="container">
                    {% if message == true %}
                        <div class="row">
                            <div class="alert alert-success" role="alert">
                                {{ message }}
                            </div>
                        </div>
                    {% endif %}
                    <div class="row">
                        <div class="col-lg-12 col-md-10 mx-auto">
                            <form action="index.php?page=add_post" method="post" role="form">
                                <div class="form-group">
                                    <label for="exampleFormControlInput1">Titre</label>
                                    <input type="text" name="titre" class="form-control" id="exampleFormControlInput1" placeholder="" maxlength="40" autofocus required>
                                </div>
                                <div class="form-group">
                                    <label for="exampleFormControlInput2">Introduction</label>
                                    <input type="text" name="introduction" class="form-control" id="exampleFormControlInput2" placeholder="" maxlength="40" required>
                                </div>
                                <div class="form-group">
                                    <label for="exampleFormControlTextarea1">Contenu</label>
                                    <textarea class="form-control" name="contenu" id="exampleFormControlTextarea1" rows="15" maxlength="255" required></textarea>
                                </div>
                                <button type="submit" class="btn btn-primary mb-2">Ajouter</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endif %}
