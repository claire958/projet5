{% if name == "form_update_comment" %}
    <div class="col-lg-6 mb-4">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Modifier un commentaire</h6>
            </div>
            <div class="card-body">
                <div class="container">
                    {% if message == true %}
                        <div class="row">
                            <div class="alert alert-success" role="alert">
                                {{ message }}
                            </div>
                        </div>
                    {% endif %}
                    <div class="row">
                        <div class="col-lg-12 col-md-10 mx-auto">
                            <form action="index.php?page=update_comment&amp;id_comment={{ commentUpdate.idComment }}&amp;name=update_comment_dashboard&amp;id_post={{ commentUpdate.idPost }}" method="post" role="form">
                                <div class="form-group">
                                    <label for="exampleFormControlTextarea1">Commentaire</label>
                                    <textarea class="form-control" name="comment" id="exampleFormControlTextarea1" rows="15" maxlength="255" required>{{ commentUpdate.comment }}</textarea>
                                </div>
                                <button type="submit" class="btn btn-primary mb-2">Modifier</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endif %}
