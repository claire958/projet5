{% if name == "form_update_post" %}
    <div class="col-lg-6 mb-4">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Modifier un article</h6>
            </div>
            <div class="card-body">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-12 col-md-10 mx-auto">
                            <form action="index.php?page=update_post&amp;id={{ article.idPost }}" method="post" role="form">
                                <div class="form-group">
                                    <label for="exampleFormControlInput1">Titre</label>
                                    <input type="text" name="titre" class="form-control" id="exampleFormControlInput1" placeholder="" value="{{ article.title }}" maxlength="25" autofocus required>
                                </div>
                                <div class="form-group">
                                    <label for="exampleFormControlInput2">Introduction</label>
                                    <input type="text" name="introduction" class="form-control" id="exampleFormControlInput2" placeholder="" value="{{ article.introduction }}" maxlength="25" required>
                                </div>
                                <div class="form-group">
                                    <label for="exampleFormControlTextarea1">Contenu</label>
                                    <textarea class="form-control" name="contenu" id="exampleFormControlTextarea1" rows="15" maxlength="255" required>{{ article.content }}</textarea>
                                </div>
                                <button type="submit" class="btn btn-primary mb-2">Modifier</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endif %}
{% if message == true %}
    <div class="card-body">
        <div class="container">
            <div class="row">
                <div class="alert alert-success" role="alert">
                    {{ message }}
                </div>
            </div>
        </div>
    </div>
{% endif %}